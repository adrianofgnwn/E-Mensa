<!DOCTYPE html>
<html lang="de">
<head>
 <meta charset="UTF-8">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <title>Alle Bewertungen</title>

 <!-- Include the CSS file for reviews -->
 <link rel="stylesheet" href="/css/bewertungen.css">
</head>
<body>

<h1>Alle Bewertungen</h1>
<a href="/meinebewertungen" class="btn btn-secondary">Meine Bewertungen</a> <!-- Link to Meine Bewertungen -->
<a href="/emensa" class="btn btn-primary">Zurück zu E-Mensa</a> <!-- Link to E-Mensa -->

<ul>
 <?php $__currentLoopData = $bewertungen; $this->addLoop($__currentLoopData);$this->getFirstLoop();
 foreach($__currentLoopData as $bewertung): $loop = $this->incrementLoopIndices();  ?>
 <li class="<?php echo \htmlentities($bewertung['hervorgehoben'] ? 'highlighted-review' : ''??'', ENT_QUOTES, 'UTF-8', false); ?>">
 <?php if(!empty($bewertung['gericht_image'])): ?>
 <img src="<?php echo \htmlentities($bewertung['gericht_image']??'', ENT_QUOTES, 'UTF-8', false); ?>" alt="<?php echo \htmlentities($bewertung['gericht_name']??'', ENT_QUOTES, 'UTF-8', false); ?>" style="width:120px;"><br>
 <?php endif; ?>
 <strong><?php echo \htmlentities($bewertung['gericht_name']??'', ENT_QUOTES, 'UTF-8', false); ?></strong>:
 <?php echo \htmlentities($bewertung['bemerkung']??'', ENT_QUOTES, 'UTF-8', false); ?> - <?php echo \htmlentities($bewertung['sterne']??'', ENT_QUOTES, 'UTF-8', false); ?> Sterne - <?php echo \htmlentities($bewertung['bewertungszeitpunkt']??'', ENT_QUOTES, 'UTF-8', false); ?>


 <!-- Show highlight/unhighlight button only for admin users -->
 <?php if(isset($_SESSION['user']) && $_SESSION['user']['admin'] == true): ?>
 <form method="POST" action="<?php echo \htmlentities($bewertung['hervorgehoben'] ? '/bewertungen_unhighlight' : '/bewertungen_highlight'??'', ENT_QUOTES, 'UTF-8', false); ?>" style="display:inline;">
 <input type='hidden' name='<?php  echo '_token'; ?>' value='<?php echo $this->csrf_token; ?>'/>
 <input type="hidden" name="bewertung_id" value="<?php echo \htmlentities($bewertung['id']??'', ENT_QUOTES, 'UTF-8', false); ?>">
 <button type="submit" class="btn <?php echo \htmlentities($bewertung['hervorgehoben'] ? 'btn-warning' : 'btn-success'??'', ENT_QUOTES, 'UTF-8', false); ?>">
 <?php echo \htmlentities($bewertung['hervorgehoben'] ? 'Hervorhebung abwählen' : 'Hervorheben'??'', ENT_QUOTES, 'UTF-8', false); ?>

 </button>
 </form>
 <?php endif; ?>
 </li>
 <?php endforeach; $this->popLoop(); $loop = $this->getFirstLoop(); ?>
</ul>

</body>
</html>
